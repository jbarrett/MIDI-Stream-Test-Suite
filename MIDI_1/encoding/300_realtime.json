         ]
      },
      {
         "expect" : "f8 91 3e 3d f8 00 00",
         "description" : "Realtime clock interrupts note on - running status remains valid",
         "data" : [
            {
               "name" : "clock"
            },
            {
               "channel" : 1,
               "name" : "note_on",
               "note" : 62,
               "velocity" : 61
            },
            {
               "name" : "clock"
            },
            {
               "channel" : 1,
               "name" : "note_off",
               "note" : 0,
